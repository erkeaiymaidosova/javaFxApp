<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #9ca1f3;" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafxapp.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>

  <Label fx:id="myLabel" style="-fx-background-color: #4940bf;" text="The Body Mass Index Formula" textFill="#f5f5f5" wrapText="true">
      <font>
         <Font name="Avenir Black" size="13.0" />
      </font></Label>
   <Label fx:id="myLabel2" contentDisplay="CENTER" prefHeight="19.0" prefWidth="118.0" style="-fx-background-color: #4940bf;" text="Write your weight" textAlignment="CENTER" textFill="#f5f5f5" textOverrun="CENTER_ELLIPSIS" wrapText="true">
      <font>
         <Font name="Avenir Black" size="13.0" />
      </font>
   </Label>
   <TextField fx:id="myText" prefHeight="26.0" prefWidth="43.0" style="-fx-background-color: #fffff;">
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
      <VBox.margin>
         <Insets />
      </VBox.margin></TextField>
   <Label fx:id="myLabel1" prefHeight="19.0" prefWidth="114.0" style="-fx-background-color: #4940bf;" text="Write your height" textFill="#f5f5f5" wrapText="true">
      <font>
         <Font name="Avenir Black" size="13.0" />
      </font>
   </Label>
   <TextField fx:id="myText1" style="-fx-background-color: #fffff;">
      <VBox.margin>
         <Insets />
      </VBox.margin></TextField>
  <Button fx:id="onHelloButtonClick" onAction="#onClickButton" text="Calculate BMI" />
</VBox>
